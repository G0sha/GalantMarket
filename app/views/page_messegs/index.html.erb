<% provide(:title, 'Главная') %>

<% @page_messegs.each do |page_messeg| %>
<div class="row thumbnail margin-clear col-xs-6">
  <%= image_tag(page_messeg.cover.medium.url, class: "img-rounded") if page_messeg.cover? %>
    <h2><%= page_messeg.title %></h2>
    <p><%= strip_tags(page_messeg.description).truncate(200) %></p>
    <%= link_to 'Подробнее', page_messeg, class: "btn btn-warning btn-xs" %>
</div>
<% end %>
