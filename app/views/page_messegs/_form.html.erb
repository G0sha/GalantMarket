<%= form_for(@page_messeg) do |f| %>
<% if @page_messeg.errors.any? %>
  <div class="panel panel-danger">
    <div class="panel-heading">
      The form contains <%= pluralize(@page_messeg.errors.count, "error") %>.
    </div>
    <div class="panel-body" >
      <ul class="list-unstyled">
        <% @page_messeg.errors.full_messages.each do |msg| %>
          <li class="text-danger"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

  <div class="field">
    <%= f.label "Заголовок" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "Содержание" %><br>
    <%= f.text_area :description, rows: 15 %>
  </div>
  <div class="field">
    <%= f.label "Изображение" %><br>
    <%= image_tag(@page_messeg.cover.small.url) if @page_messeg.cover? %>
    <%= f.file_field :cover %>
    <%= f.hidden_field :cover_cache %>
  </div>
  <div class="actions">
    <%= f.submit "Добавить новость", class: "btn btn-lg btn-style btn-block" %>
  </div>
<% end %>
