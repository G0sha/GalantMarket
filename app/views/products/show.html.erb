<% provide(:title, @product.title) %>

<div class="row thumbnail">
  <div class="page-header">
    <h2 class="text-center">
      <small><%= @product.id.to_s + '#' %></small> <%= @product.title %><br>
    </h2>
  </div>
  <div class="text-center">
    <span class="badge">Цена: <%= number_to_currency(@product.price, :unit => "руб.", :delimiter => " ", :format => "%n %u", :precision => 2) %></span>
  </div>
  <%= image_tag(@product.image.medium.url, class: "img-responsive") if @product.image? %>
  <div class="caption"><%= form_user_text(@product.description)  %></div>
  <div class="caption">
    <ul class="list-inline">
      <li>
        <%= link_to "Назад", "#", onclick: "history.back()", class: "btn btn-warning" %>
      </li>
      <li>
        <%= link_to 'Редактировать', edit_product_path(@product), class: "btn btn-success" %>
      </li>
      <li>
        <%= link_to 'Удалить', product_path, method: :delete, data: { confirm: 'Вы уверены?' }, class: "btn btn-danger" %>
      </li>
    </ul>
  </div>
</div>
