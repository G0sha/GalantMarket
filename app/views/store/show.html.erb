<% provide(:title, @product.title) %>

<div class="row thumbnail margin-clear">
    <h2 class="text-center">
      <%= @product.title %> <span class="badge">Артикул: <%= @product.id %></span><br>
      <span class="badge">Розничная цена: <%= sprintf("%0.02f руб.", @product.price) %></span>
      <span class="badge">Оптовая цена: <%= sprintf("%0.02f руб.", @product.subprice) %></span>
    </h2>
    <div class="col-xs-4 col-xs-offset-4"><%= image_tag(@product.image.medium.url, class: "img-responsive") if @product.image? %></div>
    <div class="col-xs-12"><%= sanitize(@product.description)  %></div>
    <div class="col-xs-12">
      <%= button_to 'В корзину', line_items_path(product_id: @product),
        remote: true, class: "btn btn-success" %>
      <%= link_to "Назад", "#", onclick: "history.back()", class: "btn btn-warning" %>
  </div>
</div>
