<% provide(:title, 'Группы') %>

<div class="panel panel-default">
  <div class="panel-heading">Список пользователей
    <div class="navbar-right-c">
      <%= link_to 'Добавить пользователя', new_user_path, class: "btn btn-primary" %>
    </div>
    <div class="clear-r"></div>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th style="text-align: center;"  width="5%">#</th>
        <th width="94%">Имя</th>
        <th style="text-align: center;" width="1%">Действие</th>
      </tr>
    </thead>
    <tbody>
<% @users.each do |user| %>
    <tr>
      <td style="text-align: center;"><%= user.id %></td>
      <td><%= user.name %></td>
      <td style="text-align: center;">
        <%= link_to '', edit_user_path(user), class: "glyphicon glyphicon-pencil", title: "Редактировать" %> <%= link_to '', user, method: :delete, data: { confirm: 'Вы уверены?' }, class: "glyphicon glyphicon-trash", title: "Удалить" %>
      </td>
    </tr>
<% end %>
  </tbody>
  </table>
</div>
<%= will_paginate @users, class: "pagginate-top", previous_label: "Назад", next_label: "Вперед", inner_window: @inner_window, outer_window: @outer_window %>
