<% if @cart %>
  <%= hidden_div_if(@cart.line_items.empty?, id: 'cart', class: 'panel panel-default') do %>
    <%= render @cart %>
  <% end %>
<% end %>

<nav id="nav" class="collapse navbar-collapse">
  <ul class="nav nav-pills nav-stacked">
    <% current_gropus.each do |g| %>
    <li role="presentation" class="dropdown">
      <a href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle"><%= g.title %> <span class="caret"></span></a>
      <ul class="dropdown-menu nav nav-pills nav-stacked">
        <% current_subgropus.each do |sg| %>
          <% if !(sg.products.where(group_id: g).count == 0) %>
            <li role="presentation"><%= link_to sg.title, store_index_path(:g => g.id, :sg => sg.id) %></a></li>
          <% end %>
        <% end %>
      </ul>
    </li>
    <% end %>
  </ul>
</nav>
<%= debug(params) if Rails.env.development? %>
