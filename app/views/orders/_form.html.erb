<%= form_for(@order) do |f| %>
<% if @order.errors.any? %>
  <div class="panel panel-danger">
    <div class="panel-heading">
      The form contains <%= pluralize(@order.errors.count, "error") %>.
    </div>
    <div class="panel-body" >
      <ul class="list-unstyled">
        <% @order.errors.full_messages.each do |msg| %>
          <li class="text-danger"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

  <div class="field">
    <%= f.label :name, "Ваше имя" %>
    <%= f.text_field :name, placeholder: "Иванов Иван", size: 40 %>
  </div>
  <div class="field">
    <%= f.label :address, "Адрес" %>
    <%= f.text_area :address, placeholder: "г. Москва, ул. Академика туполева д.999", rows: 3, cols: 40 %>
  </div>
  <div class="field">
    <%= f.label :phone, "Телефон" %>
    <%= f.text_field :phone, placeholder: "Вида: 89876543210", size: 40 %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, placeholder: "email@email.ru", size: 40 %>
  </div>
  <div class="field">
    <%= f.label :pay_type, "Способ оплаты" %>
    <%= f.select :pay_type, Order::PAYMENT_TYPES,
      prompt: 'Выберите метод оплаты' %>
  </div>
  <div class="actions">
    <%= f.submit "Отправить заказ", class: "btn btn-lg btn-style btn-block" %>
  </div>
<% end %>
